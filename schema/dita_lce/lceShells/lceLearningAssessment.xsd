   <xs:include schemaLocation="urn:dita13lce:names:xsd:lceDataDomain.xsd"/>
   <xs:include schemaLocation="urn:dita13lce:names:xsd:lcePerformDomain.xsd"/>
   <xs:include schemaLocation="urn:dita13lce:names:xsd:lceGTEDomain.xsd"/>
   <xs:include schemaLocation="urn:dita13lce:names:xsd:lceGapDomain.xsd"/>
